<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  
  <persistence-unit name="cycleTestPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.camunda.fox.cycle.entity.BpmnDiagram</class>
    <class>com.camunda.fox.cycle.entity.Roundtrip</class>
    <class>com.camunda.fox.cycle.entity.ConnectorConfiguration</class>
    <class>com.camunda.fox.cycle.entity.User</class>
    <class>com.camunda.fox.cycle.entity.ConnectorCredentials</class>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
