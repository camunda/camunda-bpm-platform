<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>fox-platform-ibm-websphere-ear</artifactId>
  <name>fox platform EE - IBM Websphere EAR</name>
  <packaging>ear</packaging>

  <parent>
    <groupId>com.camunda.fox.platform</groupId>
    <artifactId>fox-platform-ibm-websphere</artifactId>
    <version>6.2.0-SNAPSHOT</version>
  </parent>


  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <version>6</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <applicationName>camunda-fox-platform</applicationName>
          <initializeInOrder>true</initializeInOrder>
          <modules>
            <ejbModule>
              <groupId>com.camunda.fox.platform</groupId>
              <artifactId>fox-platform-ibm-websphere-jobexecutor-service</artifactId>
            </ejbModule>
            <ejbModule>
              <groupId>com.camunda.fox.platform</groupId>
              <artifactId>fox-platform-ibm-websphere-service</artifactId>
            </ejbModule>
          </modules>
          <filtering>true</filtering>
        </configuration>
      </plugin>     
    </plugins>
  </build>

  <dependencies>    
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-service-ext</artifactId>
      <version>${project.version}</version>
    </dependency>    

    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-ibm-websphere-jobexecutor-service</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>

    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-ibm-websphere-service</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>

    <dependency>
      <groupId>com.camunda.fox.engine</groupId>
      <artifactId>fox-engine-spring</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- exclude engine from ear -->
    <dependency>
      <groupId>com.camunda.fox.engine</groupId>
      <artifactId>fox-engine</artifactId>
      <scope>provided</scope>
      <version>${project.version}</version>
    </dependency>      
    <!-- exclude EJB service from ear-->
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-ejb-service</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>

</project>
