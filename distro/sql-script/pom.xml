                </concat>

                <concat destfile="target/upgrade-test/sql/upgrade/db2_identity_${camunda.old.majorVersion}.${camunda.old.minorVersion}_patch.sql" fixlastline="yes">
                  <fileset dir="target/camunda-engine-${project.version}/org/camunda/bpm/engine/db/upgrade" includes="db2_identity_${camunda.old.majorVersion}.${camunda.old.minorVersion}_patch*.sql" />
                </concat>

                <!-- h2 patches -->
                <concat destfile="target/upgrade-test/sql/upgrade/h2_engine_${camunda.current.majorVersion}.${camunda.current.minorVersion}_patch.sql" fixlastline="yes">
