<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="urn:maven:assembly:1.1.2">
  
  <id>distro</id>
  
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  
  <fileSets>
    <fileSet>
      <directory>../assembly/target/assembly</directory>
      <outputDirectory />     
       <excludes>
        <exclude>**/*.sh</exclude>
       </excludes>
    </fileSet>  
    <fileSet>
      <directory>../assembly/target/assembly</directory>
      <outputDirectory />     
       <includes>
        <include>**/*.sh</include>
       </includes>
        <fileMode>0755</fileMode>
    </fileSet> 
    <fileSet>
      <directory>../../sql-script/target</directory>
      <outputDirectory />
      <includes>
        <include>sql/</include>
      </includes>
    </fileSet>    
  </fileSets>

  <dependencySets>
  
    <dependencySet>
      <outputDirectory />
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/*_tomcat.sql</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>com.camunda.fox.cockpit:cockpit-sql-scripts-openjpa:jar:*</include>
      </includes>
    </dependencySet>
	
    <dependencySet>
      <outputDirectory />
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/*.sql</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>com.camunda.fox.cycle:cycle-sql-scripts:jar:*</include>
      </includes>
    </dependencySet>
	
  	<dependencySet>
  		<includes>
  			<include>com.camunda.fox.cockpit:cockpit-webapp-servlet:war:*</include>
  		</includes>
  		<outputDirectory>server/apache-tomcat-${tomcat6.version}/webapps/cockpit</outputDirectory>
        <unpack>true</unpack>
  	</dependencySet>
	
	<dependencySet>
  		<includes>
  			<include>com.camunda.fox.cycle:cycle-tomcat:war:*</include>
  		</includes>
  		<outputDirectory>server/apache-tomcat-${tomcat6.version}/webapps/cycle</outputDirectory>
        <unpack>true</unpack>
  	</dependencySet>
		
  </dependencySets>
</assembly>