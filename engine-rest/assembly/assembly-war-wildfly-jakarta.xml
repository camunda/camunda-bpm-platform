<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="urn:maven:assembly:1.1.2">

  <id>wildfly-jakarta</id>

  <formats>
    <format>war</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>src/main/runtime/wildfly/webapp</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>org.camunda.bpm:camunda-engine-rest:war:jakarta</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/jboss-deployment-structure.xml</exclude>
          <exclude>**/web.xml</exclude>
          <exclude>WEB-INF/lib/camunda-engine-rest-core-${project.version}.jar</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>

</assembly>