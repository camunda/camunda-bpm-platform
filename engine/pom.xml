                <exclude>**/ProcessInstantiationAtActivitiesHistoryTest.java</exclude>
                <exclude>**/UserOperationLogAuthorizationTest.java</exclude>
                <exclude>**/HistoricDetailAuthorizationTest.java</exclude>
                <exclude>**/HistoricVariableInstanceAuthorizationTest.java</exclude>
