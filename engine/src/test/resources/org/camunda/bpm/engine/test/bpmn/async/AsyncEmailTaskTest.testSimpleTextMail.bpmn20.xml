<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="simpleTextOnly"  isExecutable="true">

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <serviceTask id="sendMail" camunda:type="mail" camunda:async="true">
      <extensionElements>
        <camunda:field name="to">
          <camunda:string>kermit@camunda.org</camunda:string>
        </camunda:field>
        <camunda:field name="subject">
          <camunda:string>Hello Kermit!</camunda:string>
        </camunda:field>
        <camunda:field name="text">
          <camunda:string>This a text only e-mail.</camunda:string>
        </camunda:field>      
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>