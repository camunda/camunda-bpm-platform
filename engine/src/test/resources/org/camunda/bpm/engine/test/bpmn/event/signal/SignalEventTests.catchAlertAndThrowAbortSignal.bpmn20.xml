<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
	xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:camunda="http://camunda.org/schema/1.0/bpmn" 
	targetNamespace="Examples">
	
	<signal id="alertSignal" name="alert" />
	<signal id="abortSignal" name="abort" />

	<process id="catchAlertAndThrowAbort">

		<startEvent id="start" />

		<sequenceFlow sourceRef="start" targetRef="catchAlertSignal" />
	
	    <intermediateCatchEvent id="catchAlertSignal" name="Alert">
	      <signalEventDefinition signalRef="alertSignal" />
	    </intermediateCatchEvent>
	
		<sequenceFlow sourceRef="catchAlertSignal" targetRef="throwAbortSignal" />
		
		<intermediateThrowEvent id="throwAbortSignal" name="Abort" >
			<signalEventDefinition signalRef="abortSignal" />			
		</intermediateThrowEvent>
		
		<sequenceFlow sourceRef="throwAbortSignal" targetRef="end" />	 

		<endEvent id="end" />

	</process>

</definitions>