<?xml version="1.0" encoding="UTF-8"?>

<definitions id="definitions"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
             targetNamespace="Examples">

    <process id="BackwardsCompatibleExpressionProcess" isExecutable="true">

        <startEvent id="theStart"/>

        <sequenceFlow sourceRef="theStart"
                      targetRef="delegate"/>

        <serviceTask id="delegate"
                     camunda:class="org.camunda.bpm.engine.test.bpmn.servicetask.util.BackwardsCompatibleExpressionDelegate">
		      <extensionElements>
		        <camunda:field name="expression">
		          <camunda:expression>...${var}...</camunda:expression>
		        </camunda:field>
          </extensionElements>
        </serviceTask>

        <sequenceFlow sourceRef="delegate"
                      targetRef="wait"/>

        <receiveTask id="wait"/>

    </process>

</definitions>
