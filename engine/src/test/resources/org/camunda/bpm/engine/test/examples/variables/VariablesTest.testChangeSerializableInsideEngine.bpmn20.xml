<?xml version="1.0" encoding="UTF-8"?>
<definitions id="taskAssigneeExample" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:activiti="http://activiti.org/bpmn"
  targetNamespace="Examples">

    <process id="testProcess" name="Task Assignee example">

        <startEvent id="theStart" />

        <sequenceFlow sourceRef="theStart" targetRef="service1" />

        <serviceTask id="service1" activiti:class="org.camunda.bpm.engine.test.examples.variables.ChangeVariablesDelegate"></serviceTask>

        <sequenceFlow sourceRef="service1" targetRef="theTask" />

        <userTask id="theTask" name="Schedule meeting" >
          <documentation>
            Schedule an engineering meeting for next week with the new hire.
          </documentation>
          <humanPerformer>
            <resourceAssignmentExpression>
              <formalExpression>kermit</formalExpression>
            </resourceAssignmentExpression>
          </humanPerformer>
        </userTask>

        <sequenceFlow id="flow2" sourceRef="theTask" targetRef="theEnd" />

        <endEvent id="theEnd" />

    </process>

</definitions>