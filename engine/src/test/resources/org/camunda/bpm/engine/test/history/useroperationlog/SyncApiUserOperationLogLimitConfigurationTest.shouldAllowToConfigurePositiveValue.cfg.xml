<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.camunda.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">

    <!-- Database configurations -->
    <property name="databaseSchemaUpdate" value="true" />
    <property name="jdbcUrl" value="jdbc:h2:mem:SyncApiUserOperationLogLimitConfigurationTest.shouldAllowToConfigurePositiveValue" />
    
    <!-- job executor configurations -->
    <property name="jobExecutorActivate" value="false" />
    
    <!-- turn off metrics reporter -->
    <property name="dbMetricsReporterActivate" value="false" />
    <property name="taskMetricsEnabled" value="false" />
    <property name="enforceHistoryTimeToLive" value="false" />

    <!-- disable operation logs for sync APIs -->
    <property name="logEntriesPerSyncOperationLimit" value="17000"/>

  </bean>

</beans>
