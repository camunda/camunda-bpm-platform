<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.camunda.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">
  
    <property name="processEngineName" value="DecisionInstanceHistoryTest-engine" />
  
    <property name="jdbcUrl" value="jdbc:h2:mem:DecisionInstanceHistoryTest" />
    <property name="jdbcDriver" value="org.h2.Driver" />
    <property name="jdbcUsername" value="sa" />
    <property name="jdbcPassword" value="" />
    
    <!-- Database configurations -->
    <property name="databaseSchemaUpdate" value="create-drop" />
    
    <!-- job executor configurations -->
    <property name="jobExecutorActivate" value="false" />
    
    <property name="history" value="recordHistoryLevel" />
    
    <!-- turn off metrics reporter -->
    <property name="dbMetricsReporterActivate" value="false" />
    
    <property name="customHistoryLevels">
      <list>
        <bean class="org.camunda.bpm.engine.test.standalone.history.RecordHistoryLevel">
          <constructor-arg>
            <list>
              <value type="org.camunda.bpm.engine.impl.history.event.HistoryEventTypes">DMN_DECISION_EVALUATE</value>
            </list>
          </constructor-arg>
        </bean>
      </list>
    </property>
  </bean>

</beans>
