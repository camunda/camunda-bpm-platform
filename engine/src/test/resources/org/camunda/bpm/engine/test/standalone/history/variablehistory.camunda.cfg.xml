<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.camunda.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">

    <property name="processEngineName" value="VariableHistoryLevelCompatibilityTest-engine" />
          
    <!-- Database configurations -->
    <property name="databaseSchemaUpdate" value="create-drop" />
    <property name="jdbcUrl" value="jdbc:h2:mem:VariableHistoryLevelCompatibilityTest" />
  
    <property name="history" value="variable" />
    
    <!-- job executor configurations -->
    <property name="jobExecutorActivate" value="false" />
    <property name="enforceHistoryTimeToLive" value="false" />
    
    <!-- turn off metrics reporter -->
    <property name="dbMetricsReporterActivate" value="false" />
    <property name="telemetryReporterActivate" value="false" />
    <property name="taskMetricsEnabled" value="false" />
    
  </bean>

</beans>
