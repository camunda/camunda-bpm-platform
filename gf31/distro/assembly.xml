  		<outputFileNameMapping>fox-tasklist-${project.version}.${artifact.extension}</outputFileNameMapping>
  		<includes>
  			<include>com.camunda.fox.tasklist:tasklist-webapp:war:*</include>
  		</includes>
  		<outputDirectory>server/glassfish3/glassfish/domains/domain1/autodeploy</outputDirectory>
  	</dependencySet>    
    
    <dependencySet>
      <outputFileNameMapping>fox-cockpit-glassfish-${project.version}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>com.camunda.fox.cockpit:cockpit-webapp-fox-glassfish:war:*</include>
      </includes>
      <outputDirectory>server/glassfish3/glassfish/domains/domain1/autodeploy</outputDirectory>
    </dependencySet>
    
  </dependencySets>

</assembly>
