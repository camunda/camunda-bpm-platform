<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>fox-platform-glassfish-ear</artifactId>
  <name>fox platform EE - Glassfish 3.1.x EAR</name>
  <packaging>ear</packaging>

  <parent>
    <groupId>com.camunda.fox.platform</groupId>
    <artifactId>fox-platform-glassfish</artifactId>
    <version>6.1.0-alpha3</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <version>6</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <applicationName>camunda-fox-platform</applicationName>          
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>remove-beans-xml</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <unzip src="target/fox-platform-glassfish-ear-${project.version}.ear" dest="target/temp-ear" />
                <jar destfile="target/fox-engine-cdi-${project.version}.jar" filesetmanifest="merge">
                  <zipfileset src="target/temp-ear/lib/fox-engine-cdi-${project.version}.jar" excludes="**/beans.xml" />
                </jar>
                <copy todir="target/temp-ear/lib/" overwrite="true">
                  <fileset file="target/fox-engine-cdi-${project.version}.jar" />
                </copy>
                <delete file="target/fox-platform-glassfish-ear-${project.version}.ear" />
                <zip file="target/fox-platform-glassfish-ear-${project.version}.ear">
                  <zipfileset dir="target/temp-ear/" />
                </zip>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.camunda.fox.engine</groupId>
      <artifactId>fox-engine-cdi</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-deployer</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-service</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-service-ext</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-ext-config</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-jobexecutor-ext-config</artifactId>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-jobexecutor-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-glassfish-service</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-jobexecutor-service</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>

    <!-- exclude engine from ear -->
    <dependency>
      <groupId>com.camunda.fox.engine</groupId>
      <artifactId>fox-engine</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- exclude platform api from ear -->
    <dependency>
      <groupId>com.camunda.fox.platform</groupId>
      <artifactId>fox-platform-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
    	<groupId>com.camunda.fox.platform</groupId>
    	<artifactId>fox-platform-jobexecutor-ra</artifactId>
    	<version>${project.version}</version>
    </dependency>
  </dependencies>

</project>