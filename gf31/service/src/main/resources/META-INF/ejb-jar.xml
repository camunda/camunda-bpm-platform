<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
  version="3.1">
  
  <module-name>process-engine</module-name>
  <display-name>process-engine</display-name>

  <enterprise-beans>
    <session>
      <ejb-name>DefaultProcessEngineConfiguration</ejb-name>
      <ejb-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</ejb-class>
      <session-type>Singleton</session-type>
      <init-on-startup>true</init-on-startup>
      <concurrency-management-type>Bean</concurrency-management-type>
      <depends-on>
        <ejb-name>PlatformService</ejb-name>
      </depends-on>
      <transaction-type>Bean</transaction-type>
      <env-entry>
        <description>The name of the process engine</description>
        <env-entry-name>processEngineName</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>default</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>processEngineName</injection-target-name>
        </injection-target>
      </env-entry>
      <env-entry>
        <description>If true, this process engine is the default process engine</description>
        <env-entry-name>isDefault</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>isDefault</injection-target-name>
        </injection-target>
      </env-entry>
      <env-entry>
        <description>The jndi-name of the datasource used by the process engine.</description>
        <env-entry-name>datasourceJndiName</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>jdbc/FoxEngine</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>datasourceJndiName</injection-target-name>
        </injection-target>
      </env-entry>
      <env-entry>
        <description>If true, fox platform automatically performs database schema updates on startup.</description>
        <env-entry-name>isAutoSchemaUpdate</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>isAutoSchemaUpdate</injection-target-name>
        </injection-target>
      </env-entry>
      <env-entry>
        <description>Controls the way historic (completed) process instances are handled. Possible values: [none|activity|audit|full]</description>
        <env-entry-name>historyLevel</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>audit</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>historyLevel</injection-target-name>
        </injection-target>
      </env-entry>
      <env-entry>
        <description>If true, the job executor is automatically activated.</description>
        <env-entry-name>isActivateJobExcutor</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
        <injection-target>
          <injection-target-class>com.camunda.fox.platform.impl.service.ProcessEngineConfigurationBean</injection-target-class>
          <injection-target-name>isActivateJobExcutor</injection-target-name>
        </injection-target>
      </env-entry>     
    </session>
  </enterprise-beans>
</ejb-jar>