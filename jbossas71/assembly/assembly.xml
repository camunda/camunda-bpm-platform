<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">
  
  <id>assemble</id>
  
  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>server</outputDirectory>
      <includes>
        <include>org.jboss.as:jboss-as-dist:tar.gz:${version.jboss.as}</include>
      </includes>
      <unpack>true</unpack>      
      <unpackOptions>
        <excludes>
          <exclude>**/standalone/configuration/standalone.xml</exclude>        
          <exclude>**/bin/standalone.conf</exclude>
          <exclude>**/bin/standalone.conf.bat</exclude>
        </excludes>        
      </unpackOptions>      
    </dependencySet>
    <dependencySet>
      <outputDirectory>client</outputDirectory>
      <includes>
        <include>com.camunda.fox.platform:fox-platform-client:jar:${project.version}</include>
      </includes>     
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>../modules/target/modules</directory>
      <outputDirectory>modules</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../modules/target/modules</directory>
      <outputDirectory>server/jboss-as-${version.jboss.as}/modules</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/README.txt</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/jboss71/standalone.xml</source>
      <outputDirectory>server/jboss-as-${version.jboss.as}/standalone/configuration</outputDirectory>
    </file>
    <file>
      <source>src/jboss71/standalone-full.xml</source>
      <outputDirectory>server/jboss-as-${version.jboss.as}/standalone/configuration</outputDirectory>
    </file>
    <file>
      <source>src/jboss71/standalone.conf</source>
      <outputDirectory>server/jboss-as-${version.jboss.as}/bin/</outputDirectory>
    </file>
    <file>
      <source>src/jboss71/standalone.conf.bat</source>
      <outputDirectory>server/jboss-as-${version.jboss.as}/bin/</outputDirectory>
    </file>
  </files>
</assembly>