<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="urn:maven:assembly:1.1.2">
  
  <id>distro</id>
  
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  
  <fileSets>
    <fileSet>
      <directory>../assembly/target/camunda-fox-ce-${project.version}/camunda-fox-ce-${project.version}</directory>
      <outputDirectory />
      <excludes>
        <exclude>**/*.sh</exclude>
        <exclude>**/jboss-*/domain/tmp/auth</exclude>
        <exclude>**/jboss-*/standalone/tmp/auth</exclude>
        <exclude>**/*-users.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../assembly/target/camunda-fox-ce-${project.version}/camunda-fox-ce-${project.version}</directory>
      <outputDirectory />
      <includes>
        <include>**/jboss-*/**/*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>../assembly/target/camunda-fox-ce-${project.version}/camunda-fox-ce-${project.version}</directory>
      <outputDirectory />
      <includes>
        <include>**/*-users.properties</include>
      </includes>
      <fileMode>0600</fileMode>
    </fileSet>
    <fileSet>
      <directory>../assembly/target/camunda-fox-ce-${project.version}/camunda-fox-ce-${project.version}</directory>
      <outputDirectory />
      <includes>
        <include>**/jboss-*/domain/tmp/auth</include>
        <include>**/jboss-*/standalone/tmp/auth</include>
      </includes>
      <directoryMode>0700</directoryMode>
    </fileSet>
    <fileSet>
      <directory>../assembly/target/camunda-fox-ce-${project.version}/camunda-fox-ce-${project.version}</directory>
      <outputDirectory />
      <includes>
        <include>**/jboss-*/domain/tmp/auth</include>
        <include>**/jboss-*/standalone/tmp/auth</include>
      </includes>
      <directoryMode>0700</directoryMode>
    </fileSet>
    <fileSet>
      <directory>../../sql-script/target</directory>
      <outputDirectory />
      <includes>
        <include>sql/</include>
      </includes>
    </fileSet>    
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory />
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/*.sql</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>com.camunda.fox.cockpit:cockpit-sql-scripts-hibernate:jar:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory />
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/*.sql</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>com.camunda.fox.cycle:cycle-sql-scripts:jar:*</include>
      </includes>
    </dependencySet>
      
  	<dependencySet>
  		<includes>
  			<include>com.camunda.fox.platform:fox-platform-h2-webapp:war:*</include>
  		</includes>
  		<outputDirectory>server/jboss-as-${version.jboss.as}/standalone/deployments</outputDirectory>
  	</dependencySet>
  
  	<dependencySet>
  		<outputFileNameMapping>fox-cockpit-${project.version}.${artifact.extension}</outputFileNameMapping>
  		<includes>
  			<include>com.camunda.fox.cockpit:cockpit-webapp-fox:war:*</include>
  		</includes>
  		<outputDirectory>server/jboss-as-${version.jboss.as}/standalone/deployments</outputDirectory>
  	</dependencySet>
  
  	<dependencySet>
  		<outputFileNameMapping>fox-tasklist-${project.version}.${artifact.extension}</outputFileNameMapping>
  		<includes>
  			<include>com.camunda.fox.tasklist:tasklist-webapp:war:*</include>
  		</includes>
  		<outputDirectory>server/jboss-as-${version.jboss.as}/standalone/deployments</outputDirectory>
  	</dependencySet>
  
  	<dependencySet>
  		<outputFileNameMapping>fox-cycle-${project.version}.${artifact.extension}</outputFileNameMapping>
  		<includes>
  			<include>com.camunda.fox.cycle:cycle-jboss:war:*</include>
  		</includes>
  		<outputDirectory>server/jboss-as-${version.jboss.as}/standalone/deployments</outputDirectory>
  	</dependencySet>
  </dependencySets>
</assembly>