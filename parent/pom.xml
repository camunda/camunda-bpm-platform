<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.camunda.fox.platform</groupId>
  <artifactId>fox-platform-root</artifactId>
  <version>1.21.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>fox platform CE - Parent Pom</name>

  <properties>
    <version.jboss.as>7.1.0.Final</version.jboss.as>
    <fox.engine.version>1.19.0.CR-SNAPSHOT</fox.engine.version>  
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.camunda.fox.platform</groupId>
        <artifactId>fox-platform-core-bom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>repository.jboss.org</id>
      <url>http://repository.jboss.org/nexus/content/groups/public-jboss</url>
    </repository>
    <repository>
      <id>Jboss Groups Public</id>
      <url>http://repository.jboss.org/nexus/content/groups/public</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:git@bitbucket.org:camunda/fox-platform-ce.git</connection>
    <developerConnection>scm:git:git@bitbucket.org:camunda/fox-platform-ce.git</developerConnection>
  </scm>

  <distributionManagement>
	<repository>
	  <id>camunda-fox</id>
	  <name>Fox Releases</name>
	  <url>${distro.repo.ce}</url>
	</repository>
    <snapshotRepository>
      <id>camunda-fox</id>
      <name>Fox Snapshots</name>
      <url>https://app.camunda.com/nexus/content/repositories/fox-snapshot/</url>
    </snapshotRepository>	
  </distributionManagement>
</project>
