<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

  <engine>
    <property name="deploymentExportPath">target/</property>
  </engine>
  
  <!-- must be specified or test suite will not run -->
  <defaultProtocol type="Servlet 3.0" />
  
  <container qualifier="jboss" default="true">
    <configuration>
      <property name="jbossHome">${jboss.runtime.location}</property>
      <property name="managementPort">21009</property>
      <property name="serverConfig">standalone-mysql.xml</property>
    </configuration>
  </container>
</arquillian>