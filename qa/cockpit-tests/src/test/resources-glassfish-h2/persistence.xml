<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="         http://java.sun.com/xml/ns/persistence         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="fox-cockpit">
    <jta-data-source>jdbc/FoxEngine</jta-data-source>
    <class>com.camunda.fox.cockpit.entity.CockpitItem</class>
    <class>com.camunda.fox.cockpit.entity.CockpitUser</class>
    <class>com.camunda.fox.cockpit.entity.CockpitPermission</class>
    <class>com.camunda.fox.cockpit.entity.CockpitConfigEntity</class>
    <class>com.camunda.fox.cockpit.entity.InstanceFilter</class>
    <class>com.camunda.fox.cockpit.entity.VariableFilter</class>
    <class>com.camunda.fox.cockpit.entity.VariableEntry</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables" />
      <property name="eclipselink.ddl-generation.output-mode"	value="database" />			
    </properties>
  </persistence-unit>
</persistence>
