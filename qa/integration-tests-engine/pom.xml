            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <excludes>
                <!-- skip EE integration tests -->
                <exclude>**/cdi/**</exclude>
                <exclude>**/ejb/**</exclude>
                <exclude>**/context/**</exclude>
                <exclude>**/jar/**</exclude>
                <excludes>**/jboss/**</excludes>
