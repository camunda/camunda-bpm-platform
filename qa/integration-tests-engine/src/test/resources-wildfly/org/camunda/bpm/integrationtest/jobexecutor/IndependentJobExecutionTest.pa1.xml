<?xml version="1.0" encoding="UTF-8"?>
<process-application
  xmlns="http://www.camunda.org/schema/1.0/ProcessApplication"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.camunda.org/schema/1.0/ProcessApplication http://www.camunda.org/schema/1.0/ProcessApplication ">

	<process-engine name="engine1">
	  <job-acquisition>default</job-acquisition>
	  <datasource>java:jboss/datasources/ProcessEngine</datasource>
	  <properties>
	    <property name="history">full</property>
	    <property name="jobExecutorDeploymentAware">true</property>
	  </properties>
	</process-engine>
  <process-archive name="archive1">
    <process-engine>engine1</process-engine>
    <resource>org/camunda/bpm/integrationtest/jobexecutor/IndependentJobExecutionTest.process1.bpmn20.xml</resource>
  
    <properties>      
      <property name="isDeleteUponUndeploy">true</property>
      <property name="isScanForProcessDefinitions">false</property>
    </properties>
  </process-archive>
</process-application>
