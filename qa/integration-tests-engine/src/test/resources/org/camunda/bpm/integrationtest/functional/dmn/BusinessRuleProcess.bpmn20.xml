<?xml version="1.0" encoding="UTF-8"?>
<definitions id="taskAssigneeExample" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <process id="testProcess" isExecutable="true" camunda:historyTimeToLive="5">
  
    <startEvent id="start"/>
    
    <sequenceFlow sourceRef="start" targetRef="task" />

    <businessRuleTask id="task"
                      camunda:decisionRef="decision"
                      camunda:resultVariable="result" />

    <sequenceFlow sourceRef="task" targetRef="wait" />

    <userTask id="wait" />

    <sequenceFlow sourceRef="wait" targetRef="end" />

    <endEvent id="end" />

  </process>

</definitions>
