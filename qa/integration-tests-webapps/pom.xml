  <profiles>
    <profile>
      <id>jboss</id>
      <properties>
        <jboss.runtime>${basedir}/${jboss.runtime.location}</jboss.runtime>
        <http.port>${jboss.http.port}</http.port>
      </properties>
      <dependencies>
        <dependency>
