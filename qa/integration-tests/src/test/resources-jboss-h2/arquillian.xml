<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

  <defaultProtocol type="Servlet 3.0" />

  <container qualifier="jboss" default="true">
    <configuration>
      <property name="jbossHome">../jboss7-runtime/target/jboss-as-${version.jboss.as}/</property>
      <property name="managementPort">21019</property>
      <property name="serverConfig">standalone-h2.xml</property>
      <property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=128m -Xrunjdwp:transport=dt_socket,address=8797,server=y,suspend=n</property>
    </configuration>
  </container>
</arquillian>