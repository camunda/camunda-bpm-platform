<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

  <defaultProtocol type="Servlet 3.0" />
  
  <engine>
        <property name="deploymentExportPath">target/deployments</property>
  </engine>

  <container qualifier="jboss" default="true">
    <configuration>
      <property name="jbossHome">${jboss.runtime.location}</property>
      <property name="managementPort">${jboss.runtime.management-port}</property>
      <property name="serverConfig">standalone-h2.xml</property>
    <!-- <property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=128m -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y</property> -->
    </configuration>
  </container>
</arquillian>