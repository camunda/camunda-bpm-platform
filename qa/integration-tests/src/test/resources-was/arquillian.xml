<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

  <defaultProtocol type="Servlet 3.0" />
  
  <engine>
    <property name="deploymentExportPath">target/deployments</property>
  </engine>

  <container qualifier="websphere" default="true">
    <configuration>
       <property name="remoteServerAddress">${was_remoteServerAddress}</property>
       <property name="remoteServerSoapPort">${was_remoteServerSoapPort}</property>
       <property name="securityEnabled">false</property>
       <property name="username">admin</property>
       <outputToConsole>true</outputToConsole>       
    </configuration>
  </container>
</arquillian>
