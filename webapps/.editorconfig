# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.js,*.less,*.json,*.html}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
