<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name="fox-cockpit" transaction-type="JTA">
    <jta-data-source>jdbc/FoxEngine</jta-data-source>
    <class>com.camunda.fox.cockpit.entity.CockpitItem</class>
    <class>com.camunda.fox.cockpit.entity.CockpitUser</class>
    <class>com.camunda.fox.cockpit.entity.CockpitPermission</class>
    <class>com.camunda.fox.cockpit.entity.CockpitConfigEntity</class>
    <class>com.camunda.fox.cockpit.entity.InstanceFilter</class>
    <class>com.camunda.fox.cockpit.entity.VariableFilter</class>
    <class>com.camunda.fox.cockpit.entity.VariableEntry</class>
    <properties>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
      <property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=TRACE" /> 
      <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
      <property name="openjpa.Connection2UserName" value="root"/>
      <property name="openjpa.Connection2Password" value="root"/>
      <property name="openjpa.Connection2URL" value="jdbc:mysql://localhost:3306/fox-platform"/>
      <property name="openjpa.Connection2DriverName" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
