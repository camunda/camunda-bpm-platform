<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

 	<persistence-unit name="fox-cockpit" transaction-type="JTA">
	<jta-data-source>java:${persistence.ds.name}</jta-data-source>
		<!-- <non-jta-data-source>java:${persistence.ds.name}</non-jta-data-source> -->
		<class>com.camunda.fox.cockpit.entity.CockpitItem</class>
        <class>com.camunda.fox.cockpit.entity.CockpitUser</class>
        <class>com.camunda.fox.cockpit.entity.CockpitPermission</class>
		<class>com.camunda.fox.cockpit.entity.CockpitConfigEntity</class>
		<class>com.camunda.fox.cockpit.entity.InstanceFilter</class>
		<class>com.camunda.fox.cockpit.entity.VariableFilter</class>
		<class>com.camunda.fox.cockpit.entity.VariableEntry</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${persistence.ds.hibernate.hbm2ddl.auto}" />			
			<property name="hibernate.show_sql" value="${persistence.ds.hibernate.show_sql}" />			

			<!-- Infinispan 2nd level cache -->
			<!-- enable for production -->
			
			<!-- <property name="hibernate.cache.region.factory_class"
				value="org.hibernate.cache.infinispan.JndiInfinispanRegionFactory" />
			<property name="hibernate.cache.infinispan.cachemanager"
				value="java:jboss/infinispan/hibernate" />
			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTransactionManagerLookup" />
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="false" />
			<property name="hibernate.cache.use_minimal_puts" value="true" />-->
			
		</properties>
	</persistence-unit>
  <persistence-unit name="fox-engine" transaction-type="JTA">
<!-- 		<non-jta-data-source>java:${persistence.ds.name}</non-jta-data-source> -->
		<jta-data-source>java:${persistence.ds.name}</jta-data-source>
    <class>com.camunda.fox.jpa.entity.ExecutionEntity</class>
    <class>com.camunda.fox.jpa.entity.VariableEntity</class>
    <class>com.camunda.fox.jpa.entity.ByteArrayEntity</class>
    <class>com.camunda.fox.jpa.entity.JobEntity</class>
    <class>com.camunda.fox.jpa.entity.HistoricProcessInstanceEntity</class>
    <class>com.camunda.fox.jpa.entity.HistoricActivityEntity</class>
    <class>com.camunda.fox.jpa.entity.HistoricDetailEntity</class>
    <class>com.camunda.fox.jpa.entity.ProcessDefinitionEntity</class>
    
    <properties>		
      <!-- this is a read only operating persistence unit -->
			<property name="hibernate.hbm2ddl.auto" value="false" />		
			<property name="hibernate.show_sql" value="${persistence.ds.hibernate.show_sql}" />
		</properties>
	</persistence-unit>
</persistence>